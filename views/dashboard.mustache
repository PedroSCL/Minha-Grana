<h2>Bem-vindo!</h2>
<form method="POST" action="/adicionar">
  <input name="nome" placeholder="Nome do produto">
  <input name="valor" placeholder="Valor">
  <button type="submit">Adicionar</button>
</form>

<ul>
  {{#produtos}}
    <li>{{nome}} - R$ {{valor}} 
      <a href="/editar/{{id}}">Editar</a>
      <a href="/deletar/{{id}}">Excluir</a>
    </li>
  {{/produtos}}
</ul>

<a href="/logout">Sair</a>